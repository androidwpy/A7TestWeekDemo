<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.a7testweekdemo.ui.DrawerWebViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="#00cd00"
        android:padding="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/activity_drawer_web_view_titleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好"
            android:textSize="20sp"
            android:textColor="#fff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/activity_drawer_web_view_createTimeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建时间"
                android:textSize="18sp"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/activity_drawer_web_view_sourceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来源"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <WebView
        android:id="@+id/activity_drawer_web_view_webViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </WebView>

</LinearLayout>
